#!/bin/bash

mkdir /tmp/ci/build_artifacts
cd /tmp/rom

# Normal build steps
source build/envsetup.sh
export LC_ALL=C 
export BUILD_TYPE=OFFICIAL
export CCACHE_DIR=/tmp/ccache
export CCACHE_EXEC=$(which ccache)
export USE_CCACHE=1
ccache -M 20G
ccache -o compression=true
ccache -z
lunch lineage_tissot-user

# Start build
make api-stubs-docs -j16
make system-api-stubs-docs -j16
make test-api-stubs-docs -j16

make bacon -j16

# Copy build artifacts to ci dir for uploading on ci
cp out/target/product/tissot/*.zip /tmp/ci/build_artifacts/
#cp out/target/product/tissot/*.md5 /tmp/ci/build_artifacts/
